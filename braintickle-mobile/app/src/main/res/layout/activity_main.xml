<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#ffffff"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BrainTickle"
        android:textSize="32sp"
        android:textColor="#8ea1b5"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/sessionInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session ID: 1"
        android:textSize="18sp"
        android:textColor="#b8b2c3"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/questionTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Knowledge"
        android:textSize="18sp"
        android:textColor="#b8b2c3"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="24sp"
        android:textColor="#333"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/optionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A: Loading..."
        android:backgroundTint="#b8b2c3"
        android:textColor="#333"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/optionB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B: Loading..."
        android:backgroundTint="#c49ba3"
        android:textColor="#333"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/optionC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C: Loading..."
        android:backgroundTint="#b3c2a1"
        android:textColor="#333"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/optionD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D: Loading..."
        android:backgroundTint="#dfe5d9"
        android:textColor="#333"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textColor="#333"/>
</LinearLayout>